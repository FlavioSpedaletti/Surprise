@page
@using System.Security.Cryptography
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model IndexModel
@{

}

<style>

</style>

<div class="text-center">
    <h1 class="display-4">Pick a Box To Reveal A Prize</h1>
    <p>
        What Amazing Treasures Await You! 
    </p>
</div>

@if (Model.Box.HasValue)
{
    <div class="result">
    @if (Model.Winner)
    {
        <h2>🎉 We Have A Winner 🎉</h2>
        <span class="prize">💰💰💰</span>
    }
    else
    {
        <h2>Sorry, Try Again</h2>
        <span class="prize">😭</span>
    }
    </div>
}

<form asp-page="Index" method="post">
    <div class="parent">
        @for (int i = 1; i < 10; i++)
        {
            <div class="box @($"box{i}")">
                <button 
                    type="submit" 
                    name="box" 
                    value="@(i)"
                >
                    🎁
                </button>
            </div>
        }
    </div>
</form>